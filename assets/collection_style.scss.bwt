#Variable
==============================================================================*/
$gutter: 30px;
$main-color: {{ settings.main-color }};
$font-base:  -apple-system,BlinkMacSystemFont,"Segoe UI",Roboto,"Helvetica Neue",Arial,sans-serif,"Apple Color Emoji","Segoe UI Emoji","Segoe UI Symbol";
$hover: {{ settings.main-color }};
$text-color: {{ settings.color_body_text }};


.search-main {
	.products-view-grid {
		border-top: none;
		display: block;
		float: left;
		width: 100%;
	}
	.title_search {
		font-family: $font-base;
		text-transform: none;
		font-size:24px;
		@media (max-width:991px) {
			font-size:16px;
		}
	}
	.form_search_h {
		@media (min-width:768px){
			width: 300px;
			float: left;
			line-height: 2.1;
			border-radius: 0;
			border-top-left-radius: 3px;
			border-bottom-left-radius: 3px;
		}
	}
	.btn_search_h {
		@media (min-width:768px){
			border-radius: 0;
			margin-left: -1px;
			border-top-right-radius: 3px;
			border-bottom-right-radius: 3px;
		}
	}
	.cls_search {
		.item_product_main .product-thumbnail .image_thumb {
			@media (max-width:1199px) and (min-width: 992px) {
				height:212px;
			}
			@media (max-width:991px) and (min-width: 768px) {
				height:220px;
			}
			@media (max-width:480px) and (min-width: 376px) {
				height:180px;
			}
			@media (max-width:375px) {
				height:140px;
			}
		}
	}
}

.sortPagiBar {
	width:100%;
	float:left;
}
.sort-cate {
	display:inline-block;
	float:right;
}

/*STYLE SẮP XẾP NEW*/
.sort-cate{
	@media (max-width: 480px){
		float: none !important;
	}
	.sort-cate-left{
		float: left;
		margin-top: 5px;
		h3{
			font-size: 14px;
			font-weight: 700;
			float: left;
			margin: 0;
			margin-top: 2px;
			color: $text-color;
			display:inline-block;
			float:left;
			width: 100px;
		}
		ul {
			float:left;
			display: block;
			padding-left:0;
			width:calc(100% - 100px);
			-webkit-width:calc(100% - 100px);
			-o-width:calc(100% - 100px);
			-os-width:calc(100% - 100px);
			-moz-width:calc(100% - 100px);
			li {
				float: left;
				padding: 0 0 0 20px;
				@media (min-width: 768px) and (max-width: 991px){
					&:first-child {
						padding-left: 0px;
					}
				}	
				&.active {
					a {
						color: $hover;
					}
				}
				a {
					font-size: 14px;
					position: relative;
					i {
						height: 14px;
						width: 14px;
						border: 1px solid #cdcfdd;
						border-radius: 3px;
						display: inline-block;
						vertical-align: middle;
						border-radius:14px;
						margin: -3px 5px 0 0; 
						position: relative;
					}
				}
				&:hover, &.active{
					i{
						background: $hover;
						height: 14px;
						width: 14px;
						border: none;
						border-radius:14px;
						&:before {
							font-family: 'Font Awesome\ 5 Free';
							font-weight:900;
							content: "\f00c";
							color: #fff;
							position: absolute;
							width: 14px;
							border-radius:14px;
							height: 14px;
							line-height: 14px;
							top: 0px;
							font-size: 10px;
							left: 1px;
						}
					}
				}
			}
		}
	}
	.sort-cate-right{
		float: right;
		h3{
			font-size: 14px;
			font-weight: normal;
			float: left;
			margin: 0;
			margin-top: 5px;
			margin-right: 5px;
		}
		.view-mode{
			display:inline-block;
			@media(max-width: 480px){
				text-align:center;
				display:block;
			}
			a{
				border: 1px solid #eaeced;
				width: 65px;
				display: inline-block;
				color: #333;
				font-size: 14px;
				height: auto;
				line-height: inherit;
				float: left;
				border-radius: 0;
				height: 30px;
				line-height: 30px;
				@media(min-width: 413px) and (max-width: 415px){
					width: 90px;
				}
				@media(min-width: 374px) and (max-width: 380px){
					width: 80px;
				}
				&.active, &:hover{
					color: $hover;
				}
				&+a{
					margin-left: 5px;
				}
				@media(max-width: 480px){
					float:none;
				}
			}
		}
		@media(max-width: 480px){
			width: 50%;
			h3{
				display:block;
				text-align:left;
				margin-right: 0;
				float: none;
			}
		}
	}
	@media(max-width: 480px){
		.sort-cate-right-mobile{
			width: 100%;
			float: left;
			#sort-by{
				float:none;
				margin-left: 0px;
				width: 100%;
				padding: 5px 0;
				.left{
					display:block;
					float:left;
					line-height: 1.4;
					font-weight: normal;
					margin-right: 10px;
					margin-top: 5px;
					width: 60px;
				}
				ul{
					width: calc(100% - 80px);
					&>li{
						border: 1px solid #eaeced;
						padding: 0 5px;
						width: 100%;
						line-height: 28px;
					}
					ul{
						background-color: #fff;
						width: 100% !important;
						top: 27px;
						li{
							width: 100%;
							border:none;
						}
					}
				}
			}
		}
	}
}
