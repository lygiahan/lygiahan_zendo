/*============================================================================
13. FILTER
==============================================================================*/

.filter-group {
	padding: 10px 0px 0px 0px;
	ul {
		max-height: 240px;
		overflow-y: auto;
		&.size_xx {
			overflow-y: inherit !important;
		}
		&::-webkit-scrollbar-track {
			border-radius: 10px;
			background-color: #fff;
			width: 5px;
		}
		&::-webkit-scrollbar {
			width: 5px;
			background-color: #fff;
		}
		&::-webkit-scrollbar-thumb {
			border-radius: 10px;
			background-color: #919aa8;
			width: 5px;
		}
	}
}

.filter-group-title {
	display: block;
	font-size: em(18px);
	margin-bottom: 10px;
}

.filter-group {
	position:relative;
}

.filter-item {
	margin: 0;
	cursor: pointer;
	line-height: 28px;
	min-width: 100%;
	float: left;
	padding: 0px;
	position:relative;
	@media (max-width:991px){
		padding-right: 0px !important;
		padding: 0px !important;
	}
	.label_relative {
		position:relative;
		.fa {
			&:before {
			}
		}
		.filter_tt {
			padding-left: 5px;
			display: inline-block;
		}
	}
	&.filter-color-size {
		min-width: 0px;
		padding:0px;
	}
	&.filter-size {
		min-width: 0px;
		padding: 0px;
		background: #fff;
		text-align: center;
		margin-right: 5px;
		margin-bottom: 5px;
		line-height: 25px;
		color:#252525;
		position: relative;
		.fa {
			opacity:0;
			width: 30px;
			height:30px;
			position:relative;
		}
		.tags_size {
			color: $text-color;
		}
	}
	.name_color {
		line-height: 25px;
		display: inline-block;
		height: 20px;
		position: absolute;
		font-size: 14px;
		color: lighten($text-color,30%);
		text-transform: inherit;
	}
	* {
		cursor: pointer;
		color: $text-color;
		font-family: $font-base;
		font-size: 14px;
		font-weight: 400;
		@media (min-width:992px)and(max-width:1199px){
			font-size: 12px;
		}
		&:active {
			color: $main-color;
		}
	}
	&.size {
		min-width:unset;
		width:40px;
		height:40px;
		line-height:40px;
		line-height:40px;
		border: 1px solid #ebebeb;
		margin-right: 10px;
		margin-bottom:10px;
		background: #fff;
		position: relative;
		span {
			width:40px;
			height:40px;
			line-height:40px;
			line-height:40px;
		}
		.tags_size {
			width: 40px;
			height: 40px;
			font-size: 13px;
			display: inherit;
			position:relative;
			position:absolute;
			input {
				width:40px;
				height:40px;
				&:checked+span {
					color:$hover;
				}
			}
			.fa {
				opacity:0;
			}
			&:before {
				display:block;
				content: "";
				width: 40px;
				height: 40px;
				position: absolute;
				left: 0px;
				top: 0;
				border-radius: 3px;
				opacity:0;
			}
			span {
				position: absolute;
				top: 0;
				left: 0;
				width: 40px;
				height: 40px;
				margin: 0;
				text-align: center;
				font-family:$font-base;
				color:$text-color;
				&:after {
					opacity:0;
				}
			}
			&:hover {
				span {
					color:$hover;
				}
			}


		}

		input:checked+.tags_size:before{
			opacity:0;
		}

	}
	&.color{
		min-width: 20px;
		border:none!important;
		margin-bottom: 10px!important;
		height:30px;
		a,label{
			width: 100%; height: 100%;
			display: inline-block;
			font-size: 0;
		}
		.fa{
			margin-right: 10px;
			width: 30px;
			height: 30px;
			background: red;
			border-radius: 50%;
			position:relative;
			&:before{
				display: none;
			}
			&.trang{
				&:hover:before{
					display: block;
					content: "";
					width: 30px;
					height: 30px !important;
					position: absolute;
					left: 0px;
					top: 0px;
					border: 1px solid #8D90A6;
					border-radius: 50%;
				}
			}
			&:hover:before{
				display: block;
				content: "";
				width: 30px;
				height: 30px !important;
				position: absolute;
				left: 0px;
				top: 0px;
				border: 1px solid #8D90A6;
				border-radius: 50%;
			}
		}
		input:checked+.fa:before{
			display: block;
			content: "";
			width: 15px;
			height: 15px !important;
			position: absolute;
			left: 7px;
			top: 7px;
			border: 0px solid #ef562c;
		}
		input:checked+.fa.trang:before{
			display: block;
			content: "";
			width: 15px;
			height: 15px !important;
			position: absolute;
			left: 7px;
			top: 7px;
			border: 0px solid #ef562c;
		}
	}
}

.color input:checked+.fa:after {
	display: none;
}

.filter-item--green *:hover {
	color: $hover;
}

.filter-item--half {
	display: inline-block;
	width: 48%;
	white-space: nowrap;
	overflow: hidden;
	margin-right: 3px;
}

.filter-item--check-box {
	input {
		display: block;
		z-index:9;
		width: 20px;
		height: 20px;
	}
	.fa {
		margin-right: 15px;
		width: 14px;
		font-size:18px;
		line-height:40px;
		position: relative;
		top: 2px;
		display: inline-block;
	}
	input {
		+ .fa:before {
			content: "";
			margin-right: 5px;
			border-radius: 50%;
			font-size: 18px;
			border: solid 2px #ebebeb;
			line-height: 40px;
			position: absolute;
			top: -16px;
			height: 17px!important;
			width: 17px;
			background:#fff;
		}
		&:checked + span {
			color: $hover;
		}

		&:checked + .fa, + span {
			color: $hover;
			&:before {
				border-color:$hover;
			}
			&:after {
				font-family:'FontAwesome';
				content: "";
				color: $hover;
				position: absolute;
				width: 11px;
				height: 11px;
				line-height: 11px;
				border-radius:50%;
				background:$hover;
				top: -13px;
				font-size: 12px;
				left: 3px;
			}
		}
	}
}



