	&.active {
		visibility: visible;
		opacity: 1;
		top: 0 !important;
		height: auto;
		width: auto;
		.content {
			max-height: calc(100% - 60px);
			opacity: 1;
			background: transparent;
			padding: 0;
			.info{
				background: #fff;
				min-width: 500px;
			}

		}
		.overlay {
			width: 100%;
			height: 100%;
		}
	}
